{% macro js_scripts(name) %}
    <script src="/scripts/{{ name }}.bundle.js" type="text/javascript"></script>
{% endmacro %}


{% macro asideBar(objectData) %}
    <div class="col-md-2 icon">
        <span class="glyphicon glyphicon-{{ objectData.icon }}"></span>
    </div>
    <div class="col-md-10">
        <h3>
            {{ objectData.title }}
        </h3>
        <div>
            <ul>
                {% for data in objectData.data %}
                    <li>{{ data }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endmacro %}


{% macro createModal( id ) %}
    <div class="modal fade bd-example-modal-lg" id="{{ id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="cloud-js" data-cloud>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endmacro %}